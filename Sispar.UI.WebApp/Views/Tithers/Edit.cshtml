@model Sispar.Core.Entities.Tither

@{
    ViewBag.Title = "Edit";


}

<h2>Edição do Dizimista</h2>

<hr />

<form method="post">
    <div class="form-group">
        <label>Nome</label>
        <input class="form-control" type="text" name="name" autofocus value="@Model.Name" />
    </div>
    <div class="form-group">
        <label>Endereço</label>
        <input class="form-control" type="text" name="address" value="@Model.Address" />
    </div>

    <div class="form-group">
        <label>Data de Nascimento</label>
        <input class="form-control" type="date" name="birthDate" value="@Model.BirthDate.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label>CPF</label>
        <input class="form-control" type="text" name="cpf" value="@Model.CPF" />
    </div>

    <div class="form-group">
        <label>Telefone</label>
        <input class="form-control" type="text" name="telePhone" value="@Model.Telephone" />
    </div>

    <div class="form-group">
        <label>Celular</label>
        <input class="form-control" type="text" name="cellPhone" value="@Model.Cellphone" />
    </div>

    <div class="form-group">
        <label>Tipo</label>

        @Html.EnumDropDownListFor(x => x.MatiralStatus, new { @class = "form-control" })

    </div>

    <div class="form-group">
        <label>Data de Casamento</label>
        <input class="form-control" type="date" name="marriegeDate" id="marriegeDate" value="@ViewBag.MarriegeDate" />
    </div>

    <div class="form-group">
        <label>Nome da(o) Esposa(o)</label>
        <input class="form-control" type="text" name="nameSpouse" id="nameSpouse" value="@Model.NameSpouse" />
    </div>

    <div class="form-group">
        <label>Dt. de Nascimento da(o) Esposa(o)</label>

        <input class="form-control" type="date" name="dateBirthSpouse" id="dateBirthSpouse" value="@ViewBag.DateBirthSpouse" />
    </div>


    <div>
        <button class="btn btn-primary">Salvar</button>
        <a class="btn btn-default" href="/Tithers">Cancelar</a>
    </div>
</form>

@section Scripts
{
    <script>
        $(document).ready(function () {

            ativarCampos();

        });

        $('select').on('change', function () {

            ativarCampos();

        });

        function ativarCampos() {

            if ($('select').val() != 2) {

                $("#marriegeDate").prop('disabled', true);
                $("#nameSpouse").prop('disabled', true);
                $("#dateBirthSpouse").prop('disabled', true);

            } else {

                $("#marriegeDate").prop('disabled', false);
                $("#nameSpouse").prop('disabled', false);
                $("#dateBirthSpouse").prop('disabled', false);
            }
        };

    </script>
}
