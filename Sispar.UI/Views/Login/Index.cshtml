
@{
    ViewData["Title"] = "LogIn Sispar";
}

<h2>Login</h2>

<form asp-controller="Login" asp-action="Index" method="post">
    <!-- <div class="form-group"> -->
    <div class="input-group">
        <label for="username">Usuário</label>
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input type="text" class="form-control" id="username" name="username" placeholder="Usuário">
        <!--<input type="text" class="form-control" id="username" name="username" aria-describedby="usernameHelp" placeholder="Usuário"> -->
        <!--<small id="usernameHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
    </div>
    <!--<div class="form-group">-->
    <div class="input-group">
        <label for="password">Senha</label>
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input type="password" class="form-control" id="password" name="password" placeholder="Senha">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>